<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="4dp"
    tools:context="afdevelops.mmaquiz01.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TextView
        android:text="@string/fighter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/levelNameTextView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_description"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/fighterImageView" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/row1LinearLayout"
        android:layout_height="40dp"
        android:layout_width="match_parent">

        <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell1"
            android:layout_weight="1"
            android:typeface="serif"
            android:textAlignment="center"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:textSize="6sp"
            android:visibility="invisible"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell2"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="6sp"
            android:typeface="serif"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:onClick="handleCancel"
            android:textAllCaps="false" />

        <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell3"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="6sp"
            android:typeface="serif"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:onClick="handleCancel"
            android:textAllCaps="false" />

        <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell4"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="6sp"
            android:typeface="serif"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:onClick="handleCancel"
            android:textAllCaps="false" />

        <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell5"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="6sp"
            android:typeface="serif"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:onClick="handleCancel"
            android:textAllCaps="false" />

        <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell6"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="6sp"
            android:typeface="serif"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:onClick="handleCancel"
            android:textAllCaps="false" />

        <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell7"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="6sp"
            android:typeface="serif"
            tools:style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            android:onClick="handleCancel"
            android:textAllCaps="false" />

        <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cell8"
            android:layout_weight="1"
            android:textAlignment="center"
